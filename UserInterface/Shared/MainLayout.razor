@using Models;
@inherits LayoutComponentBase

@inject NavigationManager NavigationManager

<PageTitle>UserInterface</PageTitle>

<div class="page">
    <div class="sidebar" style="background-color: #4CAF50; color: #4CAF50; background-image: linear-gradient(180deg, rgb(5 103 19) 0%, #4CAF50 70%); ">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <p class="message"><a style="cursor:pointer; color:#4CAF50" @onclick="GoToLogin">Log Out</a></p>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private void GoToLogin()
    {
        NavigationManager.NavigateTo("/");
    }
}