@page "/userSettings"

@using UserInterface.Data;

@inject UserSession UserSession
@inject NavigationManager NavigationManager

<form>
    <div class="form-group">
        <button type="button" class="btn btn-primary" @onclick="GoToEditName">Edit Name</button>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary" @onclick="GoToEditSurname">Edit Surname</button>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary" @onclick="GoToEditAddress">Edit Address</button>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary" @onclick="GoToEditPassword">Edit Password</button>
    </div>
    <div class="form-group">
        <a href="/index" style="color:#4CAF50">Cancel</a>
    </div>
</form>

@code {
    [Parameter]
    public int Id { get; set; }

    private void GoToEditName()
    {
        NavigationManager.NavigateTo("/userSettings/editName");
    }

    private void GoToEditSurname()
    {
        NavigationManager.NavigateTo("/userSettings/editSurname");
    }

    private void GoToEditAddress()
    {
        NavigationManager.NavigateTo("/userSettings/editAddress");
    }

    private void GoToEditPassword()
    {
        NavigationManager.NavigateTo("/userSettings/editPassword");
    }

    private void GoToIndex()
    {
        NavigationManager.NavigateTo("/index");
    }
}

