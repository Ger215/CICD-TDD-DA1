@page "/index"

@using UserInterface.Data;

@inject UserSession UserSession
@inject NavigationManager NavigationManager

<PageTitle>Index</PageTitle>

<header>
        <h1>Welcome to FinTrac, @UserSession.LoggedUser.Name @UserSession.LoggedUser.Surname</h1>
</header>
    <main>
        <section>
            <p>Take control of your finances with FinTrac.</p>
            <p>Track your expenses, set objectives, and achieve your financial goals.</p>
        </section>
    </main>
    <footer>
        <p>&copy; 2023 FinTrac. All rights reserved.</p>
    </footer>


<style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
            text-align: center;
        }

        header {
            background-color: #4CAF50;
            color: white;
            padding: 1rem 0;
        }

        header h1 {
            font-size: 2rem;
        }

        main {
            padding: 2rem;
        }

        section {
            margin-bottom: 2rem;
        }

        h2 {
            color: #4CAF50;
            font-size: 1.5rem;
        }

        ul {
            list-style: none;
            padding: 0;
        }

        li {
            margin: 0.5rem 0;
        }

        footer {
            background-color: #4CAF50;
            color: white;
            padding: 1rem 0;
        }

        footer p {
            font-size: 0.8rem;
        }
    </style>

